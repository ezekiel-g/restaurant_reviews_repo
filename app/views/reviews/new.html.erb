<h2>Review Form for <%= @restaurant.name %></h2>

<%= form_for [@restaurant, @review] do |f| %>
  <div>
    <%= f.label :rating %><br>
    <%= f.text_field :rating %>
  </div>

  <div>
    <%= f.label :body, 'Review' %><br>
    <%= f.text_area :body %>
  </div>

  <div>
    <%= f.submit 'Add Review' %>
  </div>
<% end %>
